<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_places_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card_background_ripple"
    android:clickable="true"
    android:padding="10dp" >

    <TextView
        android:id="@+id/fragment_places_place_name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/color_subheader" />

    <TextView
        android:id="@+id/fragment_places_place_address_textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fragment_places_place_name_textView"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/color_subheader" />

    <TextView
        android:id="@+id/fragment_places_place_latlong_textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fragment_places_place_address_textView"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/color_subheader" />

</RelativeLayout>